<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.etc.blogtest.dao.TbRoleMenuDao">

    <resultMap type="com.etc.blogtest.entity.TbRoleMenu" id="TbRoleMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbRoleMenuMap">
        select
          id, rid, menu_id
        from tb_role_menu
        where id = #{id}
    </select>



    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_role_menu
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_role_menu(rid, menu_id)
        values (#{rid}, #{menuId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_role_menu(rid, menu_id)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.rid}, #{entity.menuId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_role_menu(rid, menu_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.rid}, #{entity.menuId})
        </foreach>
        on duplicate key update
        rid = values(rid),
        menu_id = values(menu_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_role_menu
        <set>
            <if test="rid != null">
                rid = #{rid},
            </if>
            <if test="menuId != null">
                menu_id = #{menuId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_role_menu where id = #{id}
    </delete>

</mapper>

