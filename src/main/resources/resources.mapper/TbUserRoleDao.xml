<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.etc.blogtest.dao.TbUserRoleDao">

    <resultMap type="com.etc.blogtest.entity.TbUserRole" id="TbUserRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbUserRoleMap">
        select
          id, uid, rid
        from tb_user_role
        where id = #{id}
    </select>



    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_user_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_user_role(uid, rid)
        values (#{uid}, #{rid})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_user_role(uid, rid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.uid}, #{entity.rid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_user_role(uid, rid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uid}, #{entity.rid})
        </foreach>
        on duplicate key update
        uid = values(uid),
        rid = values(rid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_user_role
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="rid != null">
                rid = #{rid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_user_role where id = #{id}
    </delete>

</mapper>

