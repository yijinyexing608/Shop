<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.etc.blogtest.dao.ViewsDao">

    <resultMap type="com.etc.blogtest.entity.Views" id="ViewsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="blogId" column="blog_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ViewsMap">
        select
          id, blog_id, create_time, count
        from views
        where id = #{id}
    </select>



    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from views
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="blogId != null">
                and blog_id = #{blogId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="count != null">
                and count = #{count}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into views(blog_id, create_time, count)
        values (#{blogId}, #{createTime}, #{count})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into views(blog_id, create_time, count)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.blogId}, #{entity.createTime}, #{entity.count})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into views(blog_id, create_time, count)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.blogId}, #{entity.createTime}, #{entity.count})
        </foreach>
        on duplicate key update
        blog_id = values(blog_id),
        create_time = values(create_time),
        count = values(count)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update views
        <set>
            <if test="blogId != null">
                blog_id = #{blogId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from views where id = #{id}
    </delete>

</mapper>

